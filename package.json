{
  "name": "lost-wallets",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "~8.11.0",
    "npm": "~5.5.1"
  },
  "dependencies": {
    "@500tech/react-scripts": "^1",
    "app-module-path": "2.2.0",
    "axios": "0.18.0",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "8.2.2",
    "babel-plugin-module-resolver": "3.1.0",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.0",
    "babel-preset-stage-3": "6.24.1",
    "babel-register": "6.26.0",
    "bcrypt": "2.0.0",
    "boom": "7.2.0",
    "cron": "1.3.0",
    "cross-env": "5.1.4",
    "hapi": "17.2.2",
    "hapi-auth-jwt2": "8.1.0",
    "hapi-sequelizejs": "1.1.0",
    "hapi-swagger": "9.1.1",
    "history": "4.7.2",
    "http-server": "0.11.1",
    "inert": "5.1.0",
    "joi": "13.1.2",
    "jsonwebtoken": "8.2.1",
    "lodash": "4.17.5",
    "moment": "2.20.1",
    "nodemailer": "^4.6.5",
    "nodemon": "1.17.1",
    "npm-run-all": "4.1.2",
    "onchange": "3.3.0",
    "pg": "7.4.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-loadable": "5.3.1",
    "react-redux": "5.0.6",
    "react-router": "4.2.0",
    "react-router-dom": "4.2.2",
    "react-spinners": "^0.3.2",
    "redux": "3.7.2",
    "redux-actions": "2.2.1",
    "redux-freeze": "0.1.5",
    "redux-logger": "3.0.6",
    "reselect": "3.0.1",
    "semantic-ui-react": "^0.79.1",
    "sequelize": "4.37.6",
    "styled-components": "3.1.6",
    "superagent": "3.8.2",
    "truffle": "4.1.7",
    "truffle-hdwallet-provider": "0.0.5",
    "url-join": "4.0.0",
    "vision": "5.3.1",
    "web3": "1.0.0-beta.26"
  },
  "scripts": {
    "client": "---------------------------------------------------------------------",
    "client:start": "cd client && ../node_modules/.bin/react-scripts start",
    "client:build": "cd client && ../node_modules/.bin/react-scripts build && cp -rf build ../server/static",
    "client:flow": "client/flow",
    "server": "---------------------------------------------------------------------",
    "server:build": "node_modules/.bin/babel server/src -d dist",
    "server:prod": "nodemon --no-deprecation server/dist/index.js",
    "server:start:prod": "node_modules/.bin/npm-run-all -l -s server:build server:prod",
    "server:lint:watch": "node_modules/.bin/esw -w ./server/src/ --ext .js",
    "server:start:dev": "nodemon --inspect --exec babel-node server/src/index.js",
    "server:dev": "node_modules/.bin/npm-run-all -l -p server:lint:watch server:start:dev",
    "create-migration": "sequelize migration:create --config ./server/src/migrations/config/config.js --migrations-path ./server/src/migrations/migrations/",
    "create-model": "sequelize model:generate --config ./server/src/migrations/config/config.js --migrations-path ./server/src/migrations/migrations/ --models-path ./server/src/models",
    "create-db": "node_modules/.bin/sequelize db:create --config ./server/src/migrations/config/config.js",
    "migrate": "node_modules/.bin/sequelize db:migrate --config ./server/src/migrations/config/config.js --migrations-path ./server/src/migrations/migrations/",
    "unmigrate": "sequelize db:migrate:undo --config ./server/src/migrations/config/config.js --migrations-path ./server/src/migrations/migrations/",
    "unmigrate-all": "sequelize db:migrate:undo:all --config ./server/src/migrations/config/config.js --migrations-path ./server/src/migrations/migrations/",
    "contract": "---------------------------------------------------------------------",
    "contract:build": "cd contract && ../node_modules/.bin/truffle compile && cd .. && npm run contract:copy",
    "contract:copy": "cp -af contract/. server/src/lost-wallets-contract && cp -af contract/. client/src/lost-wallets-contract",
    "contract:test": "npm run contract:build && node_modules/.bin/mocha --recursive ./contract/__tests__",
    "deploy:rinkeby": "npm run contract:build && node contract/scripts/deploy-rinkeby.js",
    "general": "---------------------------------------------------------------------",
    "prettier:all": "prettier --write '**/*.js'",
    "prettier:watch": "onchange '**/*.js' -- prettier --write {{changed}}",
    "precommit": "lint-staged",
    "postcommit": "git reset",
    "heroku-postbuild": "npm run contract:copy && npm run client:build",
    "start": "npm run server:dev"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "requirePragma": false
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/.bin/prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "flow-bin": "0.65.0",
    "husky": "0.14.3",
    "jest-enzyme": "^6.0.0",
    "mimic": "2.0.2",
    "eslint": "4.18.2",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-config-standard": "11.0.0",
    "eslint-plugin-import": "2.9.0",
    "eslint-plugin-node": "6.0.1",
    "eslint-plugin-promise": "3.7.0",
    "eslint-plugin-standard": "3.0.1",
    "eslint-watch": "3.1.3",
    "sequelize-cli": "4.0.0",
    "chai": "4.1.2",
    "ganache-cli": "6.1.0",
    "mocha": "5.1.1"
  }
}
